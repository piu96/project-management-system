
# ==============================================
# PROJECT MANAGEMENT APPLICATION - ENV CONFIG
# ==============================================

# Application Configuration
NODE_ENV=development
APP_NAME=Project Management API
APP_PORT=3000
APP_VERSION=1.0.0

# Database Configuration (MongoDB)
MONGODB_URI=mongodb://localhost:27017/project_management
MONGODB_TEST_URI=mongodb://localhost:27017/project_management_test

# Alternative for MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/project_management?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Password Reset
PASSWORD_RESET_SECRET=your-password-reset-secret
PASSWORD_RESET_EXPIRES=1h

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@projectmanagement.com
EMAIL_FROM_NAME=Project Management Team

# File Upload Configuration
MAX_FILE_SIZE=10485760
FILE_UPLOAD_PATH=./public/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,txt,zip

# Logging Configuration
LOG_LEVEL=info
LOG_FOLDER=logs
LOG_FILE=app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Frontend URLs
WEB_URL=http://localhost:3000
CLIENT_URL=http://localhost:3001
ADMIN_URL=http://localhost:3002

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=15

# Workspace Configuration
DEFAULT_WORKSPACE_PLAN=free
MAX_FREE_MEMBERS=5
MAX_FREE_PROJECTS=3

# Time Tracking
DEFAULT_HOURLY_RATE=50
DEFAULT_CURRENCY=USD

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
NOTIFICATION_BATCH_SIZE=50

# Security Settings
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=http://localhost:3001

# External Services (Optional)
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Storage (Optional - for cloud file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Redis (Optional - for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_USE_PASSWORD=false

# Development Only
DEBUG=app:*
SWAGGER_ENABLED=true
SEED_DATABASE=false
